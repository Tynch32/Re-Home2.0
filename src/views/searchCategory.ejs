<!DOCTYPE html>
<html lang="es">
<%- include('partials/head', {title: `${id}`}) %>

	<body>
		<%- include('partials/header') %>
			<main class="home_main">
				<%- include('partials/banner') %>
				<div class="container products-wrapper">
					<div class="row d-inline-flex p-2">
						<div class="menu_categoria_paginator">
                            <%- include('partials/filterCategory',{categories})%>
                        </div>
						<div class="col-12">
							<h2 class="products-title">Productos de la categoría: "<%=id%>"</h2>
						</div>
						<% if (products!==null) { %>
							<% products.forEach((product)=> { %>
								<div class="col-12 col-lg-3 col-md-6 col-sm-12">
									<%- include('partials/productCard', {product}) %>
								</div>
							<% }) %>
						<% }else{ %>
							<div class="col-12">
								<h2 class="products-title" style="color: red;">No hay productos en esta categoría.</h2>
							</div>
						<% } %>
					</div>
				</div>
			</main>
			<%- include('partials/footer') %>
			<%- include('partials/scripts') %>
	</body>