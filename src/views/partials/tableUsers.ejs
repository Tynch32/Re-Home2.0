<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Rol</th>
                <th scope="col">Cambiar Rol</th>
                <th scope="col">Fecha de Registro</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user,index)=> { %>                                                     
                <tr>
                    <th scope="row">
                        <%= index + 1 %>
                    </th>
                    <td>
                        <%= user.name %>
                    </td>
                    <td>
                        <%= user.surname %>
                    </td>
                    <td>
                        <b><%= user.roleId.name%></b>
                    </td>
                    <td>
                        <form action="/users/changeRol/<%= user.id %>?_method=PUT" method="POST">
                            <input type="number" hidden><%=user.role_id%></input>
                            <button type="submit" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-right-arrow-left"></i></button>
                        </form>
                    </td>
                    <td>
                        <%= moment(user.created_at).format('DD/MM/YYYY')%>
                    </td>
                </tr>
            <% }) %>
        </tbody>
      
    </table>
</div>