<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Cant. Prod.</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach((category,index)=> { %>                                                     
                <tr>
                    <th scope="row">
                        <%= index + 1 %>
                    </th>
                    <td>
                        <%= category.name %>
                    </td>
                    <td>
                        <%if(category.product_category.length>0){%>
                            <b><%=category.product_category.length%></b>
                        <%}else{%>
                            <%=category.product_category.length%>
                        <%}%>
                    </td>
                </tr>
                <% }) %>
        </tbody>
      
    </table>
</div>