<article class="productCard">
    <a href="/products/detail/<%= product.id %>">
        <div class="productCard_box">
            <div class="productCard_img">
                <img src="/img/products/<%= product.product_image[0].file || "default-image.png" %>" alt="imagen de producto">
            </div>
            <div class="productCard_info_price">
              <% if (product.discount) { %>
                <div class="productCard_originalPrice">
                    Antes $<%= product.price %>
                </div>
                <div class="productCard_originalPrice_fake"></div>
                <div class="productCard_info"><i class="fa-solid fa-circle-info"></i></div>
            <% } %>
            </div>
            <% if (!product.discount) { %>
                <div class="productCard_info_2"><i class="fa-solid fa-circle-info"></i></div>
            <% } %>
            <div class="productCard_boxInfo">
                <div class="productCard_finalPrice">
                    $<%= Math.floor((product.price - (product.price * product.discount / 100))) %>
                </div>
                <% if (product.discount) { %>
                <div class="productCard_discount">
                    <%= product.discount %>% OFF
                </div>
                <% } %>
            </div>
            
            <div class="productCard_name">
                <%= product.name %>
            </div>
        </div>
    </a>
</article>