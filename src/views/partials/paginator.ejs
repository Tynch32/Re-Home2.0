<nav aria-label="Page navigation">
    <ul class="pagination">
        <% if (currentPage !== 1) { %>
            <li class="page-item">
                <a class="page-link" href="javascript:void(0)" aria-label="Previous" onclick="handlePagination(event, '/?page=<%= currentPage - 1 %>&limit=8')">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        <% } %>
        
        <% pages.map(paginate => { %>
            <li key=<%= paginate.number %> class=<%= `page-item ${paginate.number === currentPage && 'active'}` %> >
                <a class='page-link' href="javascript:void(0)" onclick="handlePagination(event, '<%= paginate.url.split('&')[0] %>')">
                    <%= paginate.number %>
                </a>
            </li>
        <% }) %>
        
        <% if (currentPage !== pages[pages.length -1].number) { %>
            <li class="page-item">
                <a class="page-link" href="javascript:void(0)" aria-label="Next" onclick="handlePagination(event, '/?page=<%= currentPage + 1 %>&limit=8')">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        <% } %>
    </ul>
</nav>
<script>
    const handlePagination = async (event, endpoint) => {
        event.preventDefault();
        endpoint=endpoint+"&limit=8"
        window.location.href = endpoint;
    }
</script>
